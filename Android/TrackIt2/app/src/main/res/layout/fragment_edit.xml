<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="380dp"
        android:id="@+id/textView5"
        android:background="#ff2eeea3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/edit_title"
        android:hint="Task"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="43dp"
        android:background="#ebffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:paddingLeft="15dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/edit_disc"
        android:gravity="left"
        android:hint="Description"
        android:layout_below="@+id/edit_radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:background="#ebffffff"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/edit_radioGroup"
        android:orientation="horizontal"
        android:layout_below="@+id/edit_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#ebffffff"
        android:weightSum="1">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!"
            android:id="@+id/edit_priority1"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!!"
            android:id="@+id/edit_priority2"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!!!"
            android:id="@+id/edit_priority3"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="!!!!"
            android:id="@+id/edit_priority4"
            android:checked="false"
            android:layout_weight="0.19" />
    </RadioGroup>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Track"
        android:id="@+id/edit_trackBtn"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp" />

</RelativeLayout>